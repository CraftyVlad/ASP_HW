@model List<ASP_HW.Models.Book>

@{
    ViewData["Title"] = "Book list";
}

<h2>Book list</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Author</th>
            <th>Genre</th>
            <th>Publisher</th>
            <th>Year</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.Genre</td>
                <td>@book.Publisher</td>
                <td>@book.Year</td>
                <td>
                    <a asp-action="Details" asp-controller="Book" asp-route-id="@book.Id" class="btn btn-info">Details</a>
                    <form asp-action="Buy" asp-controller="Book" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@book.Id" />
                        <button type="submit" class="btn btn-success">Buy</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
