@model ASP_HW.Models.Book

@{
    ViewData["Title"] = "Book details";
}

<h2>@Model.Title</h2>

<ul>
    <li><strong>Author:</strong> @Model.Author</li>
    <li><strong>Genre:</strong> @Model.Genre</li>
    <li><strong>Publisher:</strong> @Model.Publisher</li>
    <li><strong>Year:</strong> @Model.Year</li>
</ul>

<a asp-action="Index" class="btn btn-secondary">Back to list</a>

<form asp-action="Buy" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-success">Buy</button>
</form>
